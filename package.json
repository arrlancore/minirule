{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^8.1.8",
    "concurrently": "^8.0.1"
  },
"scripts": {
    "postinstall": "lerna run build --scope=minirule",
    "build:language": "lerna run build --scope=minirule",
    "build:playground": "lerna run build --scope=minirule-playground",
    "dev": "lerna run build --scope=minirule && lerna run start --scope=minirule-playground --stream",
    "watch:language": "lerna run build:watch --scope=minirule --stream",
    "publish": "lerna publish"
  }
}